<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkIT.Views.NotesPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView  SeparatorVisibility="None" HasUnevenRows="True" x:Name="LV">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame Margin="5">
                                <StackLayout>
                                    <Label Text="{Binding title}"></Label>
                                    <Label Text="{Binding description}"></Label>
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label Text="take a note" FontSize="Medium" Margin="10">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer x:Name="TapAddNote" Tapped="TapAddNote_Tapped"></TapGestureRecognizer>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>